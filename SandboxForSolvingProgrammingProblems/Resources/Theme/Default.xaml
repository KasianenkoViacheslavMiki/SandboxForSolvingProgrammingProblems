<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="WindowBackground" Color="White" />

    <!--Text-->
    <SolidColorBrush x:Key="FontForeground" Color="Black" />
    
    <!--TextBox-->
    <SolidColorBrush x:Key="TextBoxBackground" Color="#edeced" />
    <SolidColorBrush x:Key="TextBoxForeground" Color="#121212" />
    
    <!--Border-->
    <SolidColorBrush x:Key="BorderBrush" Color="#f0f0f1" />
    
    <!--Button-->
    <SolidColorBrush x:Key="BtnBackground" Color="#eeeeee" />
    <SolidColorBrush x:Key="BtnMouseOver" Color="#dedede" />
    <SolidColorBrush x:Key="BtnPressed" Color="#d1d1d1" />

    <!--ScrollBar-->
    <SolidColorBrush x:Key="ScrollBarBackground" Color="Transparent" />
    <SolidColorBrush x:Key="ScrollBarForeground" Color="#b0b0b0" />
    <SolidColorBrush x:Key="ScrollBarIsPressed" Color="#a8a8a8" />

    <!--Load from https://stackoverflow.com/questions/6359848/wpf-loading-spinner/6369137#6369137-->
    <Color x:Key="FilledColor" A="255" B="155" R="155" G="155"/>
    <Color x:Key="UnfilledColor" A="0" B="155" R="155" G="155"/>
    
    <SolidColorBrush x:Key="MouseOverBackground" Color="#d5d4d5" />

    <SolidColorBrush x:Key="ComboBox.MouseOver.Background" Color="{DynamicResource MouseOverBackground}"/>


</ResourceDictionary>