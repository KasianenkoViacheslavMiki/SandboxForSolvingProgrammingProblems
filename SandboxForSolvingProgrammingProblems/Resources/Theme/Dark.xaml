<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="WindowBackground" Color="Black" />

    <!--Text-->
    <SolidColorBrush x:Key="FontForeground" Color="White" />

    <!--TextBox-->
    <SolidColorBrush x:Key="TextBoxBackground" Color="#222131" /> 
    <SolidColorBrush x:Key="TextBoxForeground" Color="#edeced" />
    
    <!--Border-->
    <SolidColorBrush x:Key="BorderBrush" Color="#2D3646" />
    
    <!--Button-->
    <SolidColorBrush x:Key="BtnBackground" Color="#60749c" />
    <SolidColorBrush x:Key="BtnMouseOver" Color="#6a609c" />
    <SolidColorBrush x:Key="BtnPressed" Color="#6a609c" />

    <!--ScrollBar-->
    <SolidColorBrush x:Key="ScrollBarBackground" Color="#55545454" />
    <SolidColorBrush x:Key="ScrollBarForeground" Color="#9c9c9c" />
    <SolidColorBrush x:Key="ScrollBarIsPressed" Color="#b0b0b0" />

    <SolidColorBrush x:Key="MouseOverBackground" Color="#383745" />
    <SolidColorBrush x:Key="ComboBox.MouseOver.Background" Color="{DynamicResource MouseOverBackground}"/>

</ResourceDictionary>